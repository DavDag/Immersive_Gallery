<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainScreenFragment"
    tools:background="#0000FF"
    >

    <!--
    Filters
    -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/filters_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:elevation="2dp"
        android:visibility="visible"
        android:background="#CC000000"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:translationY="200dp"
        tools:background="#CC000000"
        >

        <!--
        Album dropdown
        -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/filter_album"
            style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Album"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <!--
        Debug (result count)
        -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/images_list_text"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/filter_album"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <com.google.android.material.textfield.TextInputEditText
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Results: 12"
                android:focusable="false"
                android:inputType="none"
                />

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--
    Placeholder
    -->
    <LinearLayout
        android:id="@+id/images_list_placeholder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:elevation="1dp"
        tools:visibility="gone"
        tools:background="#00FFFF"
        >

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No results available :("
                android:textAlignment="center"
                android:inputType="none"
                />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <!--
    Carousel
    -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/images_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:padding="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        tools:listitem="@layout/carousel_item"
        tools:background="#00FF00"
        tools:visibility="visible"
        >

    </androidx.recyclerview.widget.RecyclerView>

    <!--
    Details
    -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:elevation="2dp"
        android:visibility="visible"
        android:background="#CC000000"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:translationY="-200dp"
        tools:background="#CC000000"
        >

        <!--
        Guideline (50% w)
        -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/details_middle_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent=".50"
            android:orientation="vertical"
            />

        <!--
        Uri
        -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/details_uri"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/details_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Uri"
            >

            <com.google.android.material.textfield.TextInputEditText
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="content://images/Download/download01.jpeg"
                android:focusable="false"
                android:inputType="none"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <!--
        Width
        -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/details_width"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/details_uri"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/details_middle_guideline"
            android:hint="width"
            android:layout_marginEnd="2dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="2000"
                android:focusable="false"
                android:inputType="none"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <!--
        Height
        -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/details_height"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/details_width"
            app:layout_constraintStart_toStartOf="@id/details_middle_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="height"
            android:layout_marginStart="2dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="2000"
                android:focusable="false"
                android:inputType="none"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <!--
        Size
        -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/details_size"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/details_width"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/details_middle_guideline"
            android:hint="size"
            android:layout_marginEnd="2dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="12 MB"
                android:focusable="false"
                android:inputType="none"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <!--
        Mime
        -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/details_mime"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/details_size"
            app:layout_constraintStart_toStartOf="@id/details_middle_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="mime"
            android:layout_marginStart="2dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="JPEG"
                android:focusable="false"
                android:inputType="none"
                />

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>